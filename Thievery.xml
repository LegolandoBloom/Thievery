<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">

 

    <Frame name="Thievery">
        <Scripts>
            <OnLoad function="Thievery_OnLoad"/>
        </Scripts>
        <Frames>
            <Button parent="Thievery" name="Thievery_PickpocketButton" parentKey="pickpocketButton" inherits="SecureActionButtonTemplate" hidden="false">
                <Scripts>
                    <PreClick>
                        if Thievery_Config.Checkboxes[1].playSound == true then
                            PlaySound(835)
                        end
                    </PreClick>
                </Scripts>
            </Button>
            <Frame name="Thievery_Visual" parentKey="visual" hidden="true" scale="1">
                <Size x="192" y="48"/>
                <Anchors>
                    <Anchor point="CENTER" relativeTo="UIParent" relativePoint="CENTER" x="50" y="30"/>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture parentKey="keybindFrameLeft" file="Interface/AddOns/Thievery/Images/thinframeleft.png" hidden="false">
                            <Size x="4" y="20"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT"/>
                            </Anchors>
                        </Texture>
                        <Texture parentKey="keybindFrameMid" file="Interface/AddOns/Thievery/Images/thinframemid.png" hidden="false">
                            <Size x="13" y="20"/>
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.keybindFrameLeft" relativePoint="RIGHT" x="0"/>
                            </Anchors>
                        </Texture>
                        <Texture parentKey="keybindFrameRight" file="Interface/AddOns/Thievery/Images/thinframeright.png" hidden="false">
                            <Size x="4" y="20"/>
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.keybindFrameMid" relativePoint="RIGHT"/>
                            </Anchors>
                        </Texture>
                        <Texture parentKey="keybindFrameBGLeft" file="Interface/AddOns/Thievery/Images/thinframebgleft.png" alpha="0.5" hidden="false">
                            <Size x="4" y="20"/>
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT"/>
                            </Anchors>
                        </Texture>
                        <Texture parentKey="keybindFrameBGMid" file="Interface/AddOns/Thievery/Images/thinframebgmid.png" alpha="0.5" hidden="false">
                            <Size x="13" y="20"/>
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.keybindFrameBGLeft" relativePoint="RIGHT" x="0"/>
                            </Anchors>
                        </Texture>
                        <Texture parentKey="keybindFrameBGRight" file="Interface/AddOns/Thievery/Images/thinframebgright.png" alpha="0.5" hidden="false">
                            <Size x="4" y="20"/>
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.keybindFrameBGMid" relativePoint="RIGHT"/>
                            </Anchors>
                        </Texture>
                        <FontString name="Thievery_Keybind" parentKey="keybind" text="E" inherits="Game15Font">
                            <Anchors>
                                <Anchor point="CENTER" relativeKey="$parent.keybindFrameBGMid" relativePoint="CENTER" x="0" y="0"/>
                            </Anchors>
                            <Color r="1" g="1" b="1"/>
                        </FontString>
                        <FontString name="Thievery_PromptText" parentKey="promptText" text="Pickpocket" inherits="Game15Font">
                            <Anchors>
                                <Anchor point="LEFT" relativeKey="$parent.keybindFrameRight" relativePoint="RIGHT" x="5" y="0"/>
                            </Anchors>
                            <Color r="1" g="0" b="0"/>
                        </FontString>
                        
                        <FontString name="Thievery_NPCName" parentKey="npcName" text="Some random dude idk" inherits="Game15Font">
                            <Anchors>
                                <Anchor point="TOPLEFT" relativeKey="$parent.keybindFrameLeft" relativePoint="BOTTOMLEFT" x="0" y="-5"/>
                            </Anchors>
                            <Color r="1" g="1" b="1"/>
                        </FontString>
                    </Layer>
                    <Layer level="OVERLAY">
                        <Texture name="Thievery_ThroughLine" parentKey="throughLine" setAllPoints="true">
                            <Size x="5" y="1"/>
                            <Anchors>
                                <Anchor point="LEFT" relativeTo="Thievery_PromptText" relativePoint="LEFT" x="0" y="0"/>
                            </Anchors>
                            <Color r="0.8" g="0.8" b="0.8"/>
                            <Scripts>
                                <OnShow>
                                    local prompt = self:GetParent().promptText
                                    local width, height = prompt:GetSize()
                                    self:SetSize(width, 1)
                                </OnShow>
                            </Scripts>
                        </Texture>
                    </Layer>
                </Layers>
                <Frames>
                    <Cooldown name="Thievery_PPCooldownFrame" parentKey="cooldown" hidden="false" setAllPoints="true">
                        <Size x="45" y="20"/>
                        <Anchors>
                            <Anchor point="LEFT" relativeTo="Thievery_PromptText" relativePoint="RIGHT"/>
                        </Anchors>
                        <Scripts>
                            <OnLoad>
                                self:SetCountdownAbbrevThreshold(650)
                                self:SetCountdownFont("GameFontHighlightMed2Outline")
                            </OnLoad>
                            <OnCooldownDone>
                                Thievery_UpdateState(Thievery_PickpocketButton, true)
                                print("cooldown done")
                            </OnCooldownDone>
                        </Scripts>
                    </Cooldown>
                </Frames>
            </Frame>
            <Frame name="Thievery_ConfigPanel" parentKey="configPanel" toplevel="true" FrameStrata="MEDIUM" inherits="BasicFrameTemplateWithInset" scale="0.8" hidden="true">
                <Size x="260" y="270"/>
                <Anchors>
                    <Anchor point="CENTER" relativeTo="UIParent" relativePoint="LEFT" x="500" y="100"/>
                </Anchors>
                <Scripts>
                    <OnLoad>
                        tinsert(UISpecialFrames, self:GetName())
                        self.TitleText:SetText("Thievery Config (Beta)")
                        self:SetMovable(true)
                        self:RegisterForDrag("LeftButton")
                    </OnLoad>
                    <OnMouseDown>
                        self:Raise()
                    </OnMouseDown>
                    <OnDragStart>
                        self:StartMoving()
                    </OnDragStart>
                    <OnDragStop>
                        self:StopMovingOrSizing()
                    </OnDragStop>
                </Scripts>
                <Frames>
                    <Frame name="$parent_Tabs" parentKey="tabs" inherits="Legolando_PortedTabSystemTemplate_Thievery">    
                        <Size x="1" y="1"/>
                        <Anchors>
                            <Anchor point="BOTTOMLEFT" relativeTo="$parent" relativePoint="TOPLEFT" x="-2" y="0"/>
                        </Anchors>
                        <KeyValues>
                            <KeyValue key="spacing" value="-5" type="number"/>
                        </KeyValues>
                    </Frame>
                    <Frame name="Thievery_DecorFrameTab1" parentKey="decorFrame1" id="1">
                        <Size x="64" y="256"/>
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT" x="-8" y="35"/>
                        </Anchors>
                        <Layers>
                            <Layer level="OVERLAY">
                                <Texture name="$parent_DecorationTab1" parentKey="decoration1" file="Interface/AddOns/Thievery/images/decoration1.png" alpha="0.5">
                                    <Size x="64" y="256"/>
                                    <Anchors>
                                        <Anchor point="CENTER" relativeTo="$parent" relativePoint="CENTER" x="0" y="0"/>
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                    </Frame>
                    <Button name="Thievery_KeybindFrame" parentKey="keybindFrame" inherits="Legolando_KeybindButtonTemplate_Thievery" id="1">
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT" x="25" y="-55"/>
                        </Anchors>
                    </Button>
                    <Button name="Thievery_MoveFrame" parentKey="moveFrame" inherits="Legolando_MoveFrameTemplate_Thievery" id="1">
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT" x="-8" y="5"/>
                        </Anchors>
                    </Button>
                    <Frame name="$parent_Checkboxes1" inherits="Legolando_CheckboxesTemplate_Thievery" parentKey="checkboxes1" id="1">
                        <Size x="200" y="180"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT" x="15" y="-105"/>
                        </Anchors>
                        <Frames>
                            <CheckButton parentKey="speedyMode" inherits="Legolando_CheckboxTemplate_Thievery">
                                <Size x="26" y="26"/>
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="0" y="0"/>
                                </Anchors>
                            </CheckButton>
                            <CheckButton parentKey="playSound" inherits="Legolando_CheckboxTemplate_Thievery">
                                <Size x="26" y="26"/>
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT" x="0" y="-25"/>
                                </Anchors>
                                <Scripts>
                                    <PostClick>
                                        if Thievery_Config.Checkboxes[1].playSound == true then
                                            PlaySound(835)
                                        end
                                    </PostClick>
                                </Scripts>
                            </CheckButton>
                            <CheckButton parentKey="enableSap" inherits="Legolando_CheckboxTemplate_Thievery">
                                <Size x="26" y="26"/>
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="0" y="-50"/>
                                </Anchors>
                            </CheckButton>
                            <CheckButton parentKey="debugMode" inherits="Legolando_CheckboxTemplate_Thievery">
                                <Size x="26" y="26"/>
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="0" y="-80"/>
                                </Anchors>
                            </CheckButton>
                        </Frames>
                    </Frame>
                    <Frame name="Thievery_DecorFrameTab2" parentKey="decorFrame2" inherits="Thievery_LockpickAnimTemplate" id="2">
                        <Size x="90" y="100"/>
                        <Anchors>
                            <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT" x="-15" y="-10"/>
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
                                <Texture name="$parent_DecorationTab2" parentKey="decoration2" file="Interface/AddOns/Thievery/images/decoration2.png" alpha="0.8">
                                    <Size x="128" y="85"/>
                                    <Anchors>
                                        <Anchor point="BOTTOMRIGHT" relativeTo="$parent" relativePoint="BOTTOMRIGHT" x="2" y="22"/>
                                    </Anchors>
                                </Texture>
                            </Layer>
                        </Layers>
                        <Scripts>
                            <OnLoad>
                                self.texture:SetSize(48, 48)
                                self.texture:SetAlpha(1)
                                self.anim:SetAnimationSpeedMultiplier(0.1)
                            </OnLoad>
                            <OnEnter>
                                self.anim:Play()
                            </OnEnter>
                            <OnLeave>
                                self.anim:Restart()
                                self.anim:Stop()
                            </OnLeave>
                            <OnShow>
                                self.anim:Play()
                                self.anim:Stop()
                            </OnShow>
                        </Scripts>
                    </Frame>
                    <Frame name="$parent_Checkboxes2" inherits="Legolando_CheckboxesTemplate_Thievery" parentKey="checkboxes2" id="2">
                        <Size x="200" y="180"/>
                        <Anchors>
                            <Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT" x="15" y="-32"/>
                        </Anchors>
                        <Frames>
                            <CheckButton parentKey="lockpicking" inherits="Legolando_CheckboxTemplate_Thievery">
                                <Size x="26" y="26"/>
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="0" y="0"/>
                                </Anchors>
                            </CheckButton>
                            <CheckButton parentKey="lockpickAnim" inherits="Legolando_CheckboxTemplate_Thievery">
                                <Size x="26" y="26"/>
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="0" y="-25"/>
                                </Anchors>
                            </CheckButton>
                            <CheckButton parentKey="lockpickSound" inherits="Legolando_CheckboxTemplate_Thievery">
                                <Size x="26" y="26"/>
                                <Anchors>
                                    <Anchor point="TOPLEFT" relativeKey="$parent" relativePoint="TOPLEFT" x="0" y="-50"/>
                                </Anchors>
                            </CheckButton>
                        </Frames>
                    </Frame>
                </Frames>
            </Frame>
        </Frames>
    </Frame>
   
</Ui>