<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <Frame name="Thievery_LockpickAnimTemplate" virtual="true">
        <Size x="38" y="38"/>
        <KeyValues>
            <KeyValue key="soundHandle" value="a"/>
        </KeyValues>
        <Layers>
            <Layer level="OVERLAY">
                <Texture name="$parent_Texture" parentKey="texture" alpha="1" file="Interface/AddOns/Thievery/images/animations/lockpick-animation.png">
                    <Size x="38" y="38"/>
                    <Anchors>
                        <Anchor point="CENTER"/>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
        <Animations>
            <AnimationGroup parentKey="anim" looping="REPEAT" setToFinalAlpha="true">
                <FlipBook smoothing="NONE" childKey="texture" duration="1.2" order="1" flipBookRows="1" flipBookColumns="10" flipBookFrames="10" flipBookFrameWidth="64" flipBookFrameHeight="64"/>
            </AnimationGroup>
        </Animations>
        <Scripts>
            <OnHide>
                self.anim:Stop()
            </OnHide>
            <OnShow>
                self.anim:Play()
            </OnShow>
        </Scripts>
    </Frame>
</Ui>